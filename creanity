        <div>Population : <span id="population">10</span></div>
        <div>Argent üí∞ : $<span id="money">1000</span></div>
    </div>
    <button onclick="buildHouse()">Construire une Maison (-$100)</button>
    <button onclick="collectTaxes()">Collecter des Taxes (+$50)</button>
    <button onclick="startWar()">D√©clarer la Guerre (-$200)</button>

    <div class="log" id="log">
        <strong>Journal des √©v√©nements :</strong>
    </div>

    <script>
        // Initialisation des ressources
        let population = 10;
        let money = 1000;

        // Met √† jour les statistiques affich√©es
        function updateStats() {
            document.getElementById('population').innerText = population;
            document.getElementById('money').innerText = money;
        }

        // Ajoute une entr√©e dans le journal des √©v√©nements
        function logEvent(message) {
            const log = document.getElementById('log');
            const newLog = document.createElement('div');
            newLog.innerText = message;
            log.appendChild(newLog);
            log.scrollTop = log.scrollHeight; // Scroll automatique
        }

        // Actions du joueur
        function buildHouse() {
            if (money >= 100) {
                money -= 100;
                population += 5;
                logEvent("Vous avez construit une maison. La population a augment√© de 5 !");
                updateStats();
            } else {
                logEvent("Pas assez d'argent pour construire une maison !");
            }
        }

        function collectTaxes() {
            money += 50;
            logEvent("Vous avez collect√© des taxes. +$50 !");
            updateStats();
        }

        function startWar() {
            if (money >= 200) {
                money -= 200;
                population -= 2;
                logEvent("Vous avez d√©clar√© une guerre. Vous avez perdu 2 habitants.");
                updateStats();
            } else {
                logEvent("Pas assez d'argent pour d√©clarer la guerre !");
            }
        }

        // Mise √† jour initiale
        updateStats();
    </script>
